.list-group-item#bank-account{ data: { publishable: @current_user.stripe_account.publishable_key } }
%script{ src: 'https://js.stripe.com/v2/' }
= hidden_field_tag :bank_account_token
%input{"data-stripe" => "country", :type => "hidden", :value => "NO"}
%input{"data-stripe" => "currency", :type => "hidden", :value => "NOK"}
%input.form-control{ type: 'text', id: "iban_number", required: true, onfocusout: "ibanOnFocusOut()" }
%input.form-control{ type: 'hidden', id: "acc_number", data: { stripe: 'account_number' } }
